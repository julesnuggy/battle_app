<style>
  h1 {
    text-align: center;
    color: red;
    text-shadow: 3px 2px grey;
    font-size: 50px;
  }
  h2 {
    text-align: center;
    color: blue;
    font-size: 35px;
  }
  body {
    margin: 10px;
  }
  td, th {
    text-align: left;
  }
  form {
    padding: 0px;
    margin: 0px;
  }
  .icon {
    width: 30px;
    height: 30px;
    display: inline;
  }
  .img_center {
    display: inline-block;
    margin-left: auto;
    margin-right: auto;
    height: 500px;
    padding: 10px;
  }
  .center {
    text-align: center;
  }
  .right_align {
    text-align: right;
  }
  .message_box {
    border-radius: 5px;
    border-style: outset;
    width: 70%;
    padding: 10px;
    position: relative;
    margin-left: 15%
  }
  .game_space {
    height: 500px;
    width: 100%;
    text-align: center;
    display: inline-block;
  }
  .container{
    display: flex;
    margin-top: 50px;
  }
  .p1_box {
    border-radius: 5px;
    border-style: outset;
    background-color: white;
    width: 37.5%;
    padding: 10px;
    margin-right: 10%;
  }
  .p2_box {
    border-radius: 5px;
    border-style: outset;
    background-color: white;
    padding: 10px;
    margin-left: 10%;
    flex-grow: 1;
  }
  .lr_spacing {
    padding-left: 10px;
    padding-right: 10px;
  }
  .icon_spacing {
    padding-left: 10px;
    padding-right: 10px;
    width: 30px;
  }
  .btn {
    border-radius: 5px;
    border: 2px solid black;
    background-color: white;
    color: black;
    padding: 10px 15px;
    font-size: 16px;
    cursor: pointer;
  }
  .green {
    border-color: #4CAF50;
    color: green;
  }
  .green:hover {
    background-color: #4CAF50;
    color: white;
  }
  .blue {
    border-color: #2196F3;
    color: dodgerblue
  }
  .blue:hover {
    background: #2196F3;
    color: white;
  }
  .purple {
    border-color: #2b1b5c;
    color: #21255e;
  }
  .purple:hover {
    background: #2b1b5c;
    color: white;
  }
  .red {
    border-color: #f44336;
    color: red
  }
  .red:hover {
    background: #f44336;
    color: white;
  }
  .grey {
    border-color: #e7e7e7;
    color: black;
  }
  .grey:hover {
    background: #e7e7e7;
  }
  .loader {
    border: 5px solid #f3f3f3;
    border-radius: 50%;
    border-top: 5px solid red;
    width: 15px;
    height: 15px;
    padding: 2.5px;
    -webkit-animation: spin 2s linear infinite; /* Safari */
    animation: spin 2s linear infinite;
  }
  /* Safari */
  @-webkit-keyframes spin {
    0% { -webkit-transform: rotate(0deg); }
    100% { -webkit-transform: rotate(360deg); }
  }
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
</style>

<html>
  <body>

    <h1> MATCH </h1>


    <div class="message_box">
      <table style="width:100%">
        <tr>
          <td class="lr_padding">
            <% if @game.player2.name == "Computer" && @game.turn.name == "Computer"%>
              <p id="battle_message_text"><%= "COMP: #{@battle_message}" %></p>
            <% else %>
              <p id="battle_message_text"><%= @battle_message %></p>
            <% end %>
          </td>
          <td class="right_align lr_padding">
            <% unless @battle_message == "FIGHT!" || @battle_message.include?("turn") || @battle_message.include?("Targetting") %>
              <form action="/finish_turn">
                <input type="submit" id="message_ok" value="OK" autofocus>
              </form>
            <% end %>
          </td>
        </tr>
      </table>

    </div>
    <br />

    <div class="game_space">
        <img class="img_center" src = 'https://image.ibb.co/mz5hyS/FFXIV_Black_Mage.png'>
        <img class="img_center" src = 'https://image.ibb.co/kZcvJS/Dragoon_Artwork_XIV.png'>
    </div>

    <div class="container">
      <div class="p1_box">
        <table>
          <tr>
            <th class="icon_spacing">
              <% if @game.turn == @game.player1 %>
                <img class="icon" id="p1_turn" src="https://image.ibb.co/d3mKA7/ffvii_buster_sword.png">
              <% else %>
                <div class="loader"></div>
              <% end %>
            </td>
            <th class="lr_spacing">
              <p><%= @game.player1.name %></p>
            </td>
            <th class="lr_spacing">
              <p><%= @game.player1.curr_hp %>/<%= @game.player1.max_hp %></p>
            </td>
          </tr>
        </table>

        <% if @game.turn == @game.player1 %>
          <table>
            <tr>
              <td>
                <form action="/target_self">
                  <button class="btn blue" id="p1_tgt_self">Target Self</button>
                </form>
              </td>
              <td>
                <form action="/target_opponent">
                  <button class="btn blue" id="p1_tgt_opp">Target Opponent</button>
                </form>
              </td>
            </tr>

            <tr>
              <td>
                <form action="/phys_attack">
                  <button class="btn red" id="p1_atk" autofocus>Attack</button>
                </form>
              </td>
              <td>
                <form action="/defend_self">
                  <button class="btn red" id="p1_def">Defend</button>
                </form>
              </td>
            </tr>

            <tr>
              <td>
                <form action="/use_special_buff">
                  <button class="btn green" id="p1_wmg_scan" name="spc_buff" value="wmg_scan">Scan</button>
                </form>
              </td>
              <td>
                <form action="/use_special_heal">
                  <button class="btn green" id="p1_wmg_cure" name="spc_heal" value="wmg_cure">Cure</button>
                </form>
              </td>
            </tr>
            <tr>
              <form action="/use_special_atk">
                <td>
                  <button class="btn purple" id="p1_bmg_fire" name="spc_atk" value="bmg_fire">Fire</button>
                </td>
                <td>
                  <button class="btn purple" id="p1_bmg_ice" name="spc_atk" value="bmg_ice">Ice</button>
                </td>
              </form>
            </tr>
          </table>
        <% else %>
          <table>
            <tr>
              <td>
                <button class="btn grey">Target Self</button>
              </td>
              <td>
                <button class="btn grey">Target Opponent</button>
              </td>
            </tr>

            <tr>
              <td>
                <button class="btn grey">Attack</button>
              </td>
              <td>
                <button class="btn grey">Defend</button>
              </td>
            </tr>

            <tr>
              <td>
                <button class="btn grey">Scan</button>
              </td>
              <td>
                <button class="btn grey">Heal</button>
              </td>
            </tr>

            <tr>
              <td>
                <button class="btn grey">Fire</button>
              </td>
              <td>
                <button class="btn grey">Ice</button>
              </td>
            </tr>
          </table>
        <% end %>

      </div>
      <br />

      <div class="p2_box">
        <table>
          <tr>
            <th class="icon_spacing">
              <% if @game.turn == @game.player2 %>
                <img class="icon" id="p2_turn" src="https://image.ibb.co/nQGKA7/ffviii_gunblade.png">
              <% else %>
                <div class="loader"></div>
              <% end %>
            </td>
            <th class="lr_spacing">
              <p><%= @game.player2.name %></p>
            </td>
            <th class="lr_spacing">
              <p><%= @game.player2.curr_hp %>/<%= @game.player2.max_hp %></p>
            </td>
          </tr>
        </table>

        <% if @game.turn == @game.player2 %>
          <table>
            <tr>
              <td>
                <form action="/target_self">
                  <button class="btn blue" id="p2_tgt_self">Target Self</button>
                </form>
              </td>
              <td>
                <form action="/target_opponent">
                  <button class="btn blue" id="p2_tgt_opp">Target Opponent</button>
                </form>
              </td>
            </tr>

            <tr>
              <td>
                <form action="/phys_attack">
                  <button class="btn red" id="p2_atk" autofocus>Attack</button>
                </form>
              </td>
              <td>
                <form action="/defend_self">
                  <button class="btn red" id="p2_def">Defend</button>
                </form>
              </td>
            </tr>

            <tr>
              <td>
                <form action="/use_special_buff">
                  <button class="btn green" id="p2_wmg_scan" name="spc_buff" value="wmg_scan">Scan</button>
                </form>
              </td>
              <td>
                <form action="/use_special_heal">
                  <button class="btn green" id="p2_teq_recov" name="spc_heal" value="teq_recov">Recover</button>
                </form>
              </td>
            </tr>
            <tr>
              <form action="/use_special_atk">
                <td>
                  <button class="btn purple" id="p2_teq_tr_thr" name="spc_atk" value="teq_tr_thr">True Thrust</button>
                </td>
                <td>
                    <button class="btn purple" id="p2_teq_jump" name="spc_atk" value="teq_jump">Jump</button>
                </td>
              </form>
            </tr>
          </table>
        <% else %>
          <table>
            <tr>
              <td>
                <button class="btn grey">Target Self</button>
              </td>
              <td>
                <button class="btn grey">Target Opponent</button>
              </td>
            </tr>

            <tr>
              <td>
                <button class="btn grey">Attack</button>
              </td>
              <td>
                <button class="btn grey">Defend</button>
              </td>
            </tr>

            <tr>
              <td>
                <button class="btn grey">Scan</button>
              </td>
              <td>
                <button class="btn grey">Recover</button>
              </td>
            </tr>

            <tr>
              <td>
                <button class="btn grey">True Thrust</button>
              </td>
              <td>
                <button class="btn grey">Jump</button>
              </td>
            </tr>
          </table>
        <% end %>

      </div>
    </div>

    <object data="https://play.google.com/music/m/Tfqbn34xbp6tyaqhdzqqphkrjou?t=Dont_be_Afraid_Final_Fantasy_VIII_-_Nobuo_Uematsu">
      <param name="autoplay" value="true">
    </object>
  </body>

</html>
